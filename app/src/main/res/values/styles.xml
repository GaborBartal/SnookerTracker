<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#80DEEA</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#80DEEA</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AppThemeDark">
        <item name="colorPrimary">#80DEEA</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#424242</item>
    </style>

    <style name="UserConfig" parent="AppThemeDark">
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">#026302</item>
    </style>

    <style name="PlayerData" parent="ShadowedText">
        <item name="android:textColor">#0277BD</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Referee" parent="ShadowedText">
        <item name="android:textColor">#FF5722</item>
    </style>

    <style name="ShadowedText">
        <item name="android:shadowColor">#333</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="Button_Main" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:minWidth">4dp</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="Button_Main.Mistake">
        <item name="android:backgroundTint">#FF5722</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Button_Main.Deactivated">
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Button_Main.Hint">
        <item name="android:backgroundTint">@android:color/holo_green_dark</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Button_Main2">
        <item name="android:backgroundTint">#FF5722</item>
        <item name="android:textSize">4sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Text_Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">-6dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>